import java.util.HashMap;
import java.util.Map;

public class LinkedListDebug {

    //1 is reserved for no-result!

    private final Map<Integer, Node> linkedList = new HashMap<>();
    private int currentIndex;
    private boolean asc = true; //false for descending

    //===============ADDED CLASSES START HERE===================
    public int getCurrentIndex() {
        return currentIndex;
    }
    public void addValueToNode(int index, int value){
        putNode(index, linkedList.get(index).previousIndex, linkedList.get(index).value+value);
    }
    public void subtractFromNode(int index, int num){
        int value = linkedList.get(index).value;
        if(value<num) return; //we cannot make this call
        int subtracted = value-num;
        if(subtracted > 0 && (subtracted<(value/100))) return; // do not leave 1% or less, we do not want to make dust!

        if(subtracted==0){pop(); return;}
        else{
            putNode(index, linkedList.get(index).previousIndex, subtracted);
        }
    }


    //===============ADDED CLASSES END  HERE===================




    public void setAsc(boolean isAscending) {
        asc = isAscending;
    }

    public void putNode(int index, int previousIndex, int num) {
        Node node = new Node();
        node.previousIndex = previousIndex;
        node.value = num;
        linkedList.put(index, node);
    }
//

